<!-- this is the markup. you can change the details (your own name, your own avatar etc.) but don’t change the basic structure! -->
<div id="monster_show">
<aside class="profile-card">

  <header>

    <!-- here’s the avatar -->
    <%= image_tag @monster_img %>


    <!-- the username -->
    <div class="mname">
      <%= @monster_name %>
    </div>

    <div class="mfact">
    <!-- and role or location -->
      <%= @facts %>
    </div>

  </header>

  <div class="panel info">
    <br>
    <br>
    <div class="skills">
  
  <div class="charts">
    <div class="chart chart--dev">
      <span class="chart__title">Stats</span>
      <ul class="chart--horiz">
        <li class="chart__bar mlevel" data-skill="60">
          <span class="chart__label">
            Level: <%= @monster.level %>
          </span>
        </li>
        <li class="chart__bar mexperience" data-skill="50">
          <span class="chart__label">
            Experience
          </span>
        </li>
        <li class="chart__bar mpower" data-skill="70">
          <span class="chart__label">
            Power
          </span>
        </li>
        <li class="chart__bar menergy" data-skill="65">
          <span class="chart__label">
            Energy
          </span>
        </li>
      </ul>
    </div>
    
    <div class="chart chart--prod">
      <span class="chart__title">Veggie points</span>
      <ul class="chart--horiz">
      <li class="chart__bar mpoints" data-skill="70">
        <span class="chart__label">
          1505151
        </span>
      </li>
    </ul>
    </div>
    
    
  </div>
</div>

  </div>

  <!-- bit of a bio; who are you? -->
  <div class="profile-bio">

    <p>I'm so happy!</p>

  </div>

  <!-- some social links to show off -->
  <ul class="profile-social-links">


    <!-- add or remove social profiles as you see fit -->

  </ul>


</aside>
</div>
<!-- that’s all folks! -->
